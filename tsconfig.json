{
  "compilerOptions": {
    "lib": ["es2019", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "CommonJS",
    "declarationDir": "./dist/types",
    "outDir": "./dist/cjs",
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

